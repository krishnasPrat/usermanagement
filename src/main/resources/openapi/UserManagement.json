{
  "openapi": "3.0.3",
  "info": {
    "title": "User Management API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:9150/user-management/api"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Create user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/User.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/User.json"
                }
              }
            }
          }
        }
      }
    },
    "/service": {
      "post": {
        "summary": "Create service",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/Service.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/Service.json"
                }
              }
            }
          }
        }
      }
    },
    "/subscription": {
      "post": {
        "summary": "Create subscription",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/Subscription.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/Subscription.json"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "$ref": "./schemas/User.json"
      },
      "Service": {
        "$ref": "./schemas/Service.json"
      },
      "Subscription": {
        "$ref": "./schemas/Subscription.json"
      },
      "Role": {
        "$ref": "./schemas/Role.json"
      },
      "Permission": {
        "$ref": "./schemas/Permission.json"
      },
      "RolePermissionMapping": {
        "$ref": "./schemas/RolePermissionMapping.json"
      }
    }
  }
}
