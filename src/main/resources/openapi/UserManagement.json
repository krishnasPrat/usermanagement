{
  "openapi": "3.0.3",
  "info": {
    "title": "User Management API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:9150/user-management/api"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Create user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/User.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/User.json"
                }
              }
            }
          }
        }
      }
    },
    "/service": {
      "post": {
        "summary": "Create service",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/Service.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/Service.json"
                }
              }
            }
          }
        }
      }
    },
    "/subscription": {
      "post": {
        "summary": "Create subscription",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/Subscription.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/Subscription.json"
                }
              }
            }
          }
        }
      }
    },
    "/subscription-user": {
      "post": {
        "summary": "Create subscription user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "./schemas/SubscriptionUser.json"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/SubscriptionUser.json"
                }
              }
            }
          }
        }
      }
    },
    "/subscription-user/subscription/{subscriptionId}/user/{userId}/permissions": {
      "get": {
        "summary": "Get effective permissions for a subscription user",
        "parameters": [
          {
            "name": "subscriptionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/PermissionList.json"
                }
              }
            }
          }
        }
      }
    },
    "/subscription-user/subscription/{subscriptionId}/user/{userId}/special-permissions": {
      "post": {
        "summary": "Upsert special permissions for a subscription user",
        "parameters": [
          {
            "name": "subscriptionId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "./schemas/SpecialPermission.json"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "./schemas/SubscriptionUser.json"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "$ref": "./schemas/User.json"
      },
      "Service": {
        "$ref": "./schemas/Service.json"
      },
      "Subscription": {
        "$ref": "./schemas/Subscription.json"
      },
      "SubscriptionUser": {
        "$ref": "./schemas/SubscriptionUser.json"
      },
      "SpecialPermission": {
        "$ref": "./schemas/SpecialPermission.json"
      },
      "PermissionList": {
        "$ref": "./schemas/PermissionList.json"
      },
      "Role": {
        "$ref": "./schemas/Role.json"
      },
      "Permission": {
        "$ref": "./schemas/Permission.json"
      },
      "RolePermissionMapping": {
        "$ref": "./schemas/RolePermissionMapping.json"
      }
    }
  }
}
